{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Kernel",
            "type": "shell",
            "command": "./build.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Kernel",
            "type": "shell",
            "command": "./clean.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Launch QEMU with GDB",
            "type": "shell",
            "command": "qemu-system-i386 -s -S -serial file:${workspaceFolder}/serial.log -cdrom ${workspaceFolder}/lpl.iso -m 512 -no-reboot -no-shutdown -d int,cpu_reset -D ${workspaceFolder}/qemu.log",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^QEMU.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            },
            "dependsOn": ["Build ISO"],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Kill QEMU",
            "type": "shell",
            "command": "pkill -9 qemu-system-i386 || true",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run QEMU (No Debug)",
            "type": "shell",
            "command": "./qemu.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["Build Kernel"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build ISO",
            "type": "shell",
            "command": "./iso.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["Build Kernel"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
